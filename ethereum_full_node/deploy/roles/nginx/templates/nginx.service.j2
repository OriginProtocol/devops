[Unit]
Description=NGINX HTTP and reverse proxy server
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
User=root
Group=root
Type=forking
PIDFile={{ nginx_directory }}/nginx.pid
ExecStartPre=/usr/sbin/nginx -t -c {{ nginx_directory }}/nginx.conf
ExecStart=/usr/sbin/nginx -c {{ nginx_directory }}/nginx.conf
ExecReload=/usr/sbin/nginx -s reload
KillMode=process
KillSignal=SIGINT
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target